<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GovPortal</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="/public/template.css">

  <!-- css -->
  <style>
    .portal {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .portal .work {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      align-content: center;
      padding: 0 40px;
    }

    .portal .work i {
      width: fit-content;
      font-size: 50px;
      color: #333333;
      border-radius: 50%;
      border: 2px solid #333333;
      padding: 12px;
    }

    .portal .work .work-heading {
      font-size: 20px;
      color: #333333;
      text-transform: uppercase;
      margin: 10px 0;
    }

    .portal .work .work-text {
      font-size: 17px;
      color: #585858;
      margin: 10px 0;
    }

    .button {
      width: 250px;
      height: 30px;
      border: 1px solid;
      background: #302F49;
      border-radius: 25px;
      font-size: 15px;
      color: #e9f4fb;
      font-weight: 700;
      border-color: #79b1d6;
      cursor: pointer;
      outline: none;
    }

    .button:hover {
      background: #302F49;
      color: #1a1717;
      transition: .2s;
      box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.2);
    }
  </style>

<script src="/header.js" type="text/javascript" defer></script>
<script src="/footer.js" type="text/javascript" defer></script>

</head>
<body>
  <header-component></header-component>

  <main class="main">
    <!-- Government -->
    <div class="main-text">
      <h2>Government Portal</h2>
      <br>
      <p><!--Description--></p>
    </div>
    <!-- Portal -->
    <div class="portal">
      <!-- View Present Dropout -->
      <div class="work">
        <i class="fa fa-list"></i>
        <p class="work-heading">Present Dropouts</p>
        <p class="work-text">Click to view latest Dropout list.</p>
        <a href="/currentdropout"><button class="button">View</button></a>
      </div>
      <!-- View Previous Dropout -->
      <div class="work">
        <i class="fa fa-list"></i>
        <p class="work-heading">Previous Dropouts</p>
        <p class="work-text">Click to view previous Dropout lists.</p>
        <a href="PreviousDropout"><button class="button">View</button></a>
      </div>
      <!-- New School Registration -->
      <div class="work">
        <i class="fa fa-school"></i>
        <p class="work-heading">School Registration</p>
        <p class="work-text">Click here for new School Registration.</p>
        <a href="/SchoolRegistration"><button class="button">Register</button></a>
      </div>
    </div>
  </main>

  <footer-component></footer-component>
</body>
</html>