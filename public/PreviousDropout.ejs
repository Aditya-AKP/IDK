<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Previous Dropout </title>
  <link rel="icon" type="image/png" href="/images/edudrop.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="/public/template.css">
  <script src="/header.js" type="text/javascript" defer></script>
  <script src="/footer.js" type="text/javascript" defer></script>
</head>
<body>
  <header-component></header-component>

<style>
.submit{
width: 100px;
height: 50px;
border: 1px solid;
background: #302F49;
border-radius: 25px;
font-size: 20px;
color: #e9f4fb;
font-weight: 700;
border-color: #79b1d6;
cursor: pointer;
outline: none;
}

.submit:hover{
background: #302F49;
color: #1a1717;
transition: .2s;
box-shadow: 10px 10px 15px rgba(0,0,0,0.2);
}
</style>

  <main class="main" style="display: block;">
    <div class="main-text" style="margin-left: 10%;">
        <h1>Choose the Session</h1>
        <% for(var i=0;i<ans.length;i++) { %>
            <form action="/ViewDropout" method="post">
                <input type="text" name="Session" value="<%= ans[i].Session %>" hidden>
                <input type="submit" class="submit" value="<%= ans[i].Session %>">
            </form>
            <p></p>
        <% } %>
    </div>
  </main>


<footer-component></footer-component>
</body>

</html>